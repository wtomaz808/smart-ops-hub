@using SmartOpsHub.Core.Models

<div class="chat-bubble @(Message.Role == ChatRole.User ? "chat-bubble-user" : "chat-bubble-assistant")">
    <div class="chat-bubble-content">
        @Message.Content
    </div>
    <div class="chat-bubble-time">
        @Message.Timestamp.LocalDateTime.ToString("h:mm tt")
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public ChatMessage Message { get; set; } = default!;
}

<style>
    .chat-bubble {
        max-width: 80%;
        padding: 0.6rem 1rem;
        border-radius: 1rem;
        margin-bottom: 0.5rem;
        word-wrap: break-word;
    }

    .chat-bubble-user {
        background-color: #0d6efd;
        color: white;
        margin-left: auto;
        border-bottom-right-radius: 0.25rem;
    }

    .chat-bubble-assistant {
        background-color: #e9ecef;
        color: #212529;
        margin-right: auto;
        border-bottom-left-radius: 0.25rem;
    }

    .chat-bubble-content {
        font-size: 0.9rem;
        line-height: 1.4;
        white-space: pre-wrap;
    }

    .chat-bubble-time {
        font-size: 0.7rem;
        opacity: 0.7;
        margin-top: 0.25rem;
        text-align: right;
    }
</style>
